<%= form.error_notification %>
<div class='inputs'>
  <fieldset>
    <%= form.input :title %>
    <%= form.input :body, :as => :ckeditor , :input_html => { :cols => 5 }%>
    <%= form.input :summary, :hint => 'Plain text only', :input_html => { :rows => 5, :class => 'span14'} %>
    <%= form.input :url, :as => :url %>
    <%= form.input :published %>
    <%= form.input :published_at, :as => :date, :include_blank => true, :value => Time.now, :labels => { :year => 'Y', :month => 'M', :day => 'D' }, :order => [:day, :month, :year], :input_html => { :class => 'span2'}, :hint => form.object.published_at.blank? ? 'Leave blank to use today' : '' %>
    <%= form.input :image, :as => :file %>
    <%= form.input :remove_image, :as => :boolean if form.object.image %>
    <%= form.input :image_alt, :label => 'Image description' %>
  </fieldset>

  <fieldset>
    <legend>SEO</legend>
    <%= form.input :meta_title, :hint => form.object.meta_title.blank? ? 'This will be set automatically if left blank' : '' %>
    <%= form.input :meta_description, :hint => form.object.meta_title.blank? ? 'This will be set automatically if left blank' : '' %>
  </fieldset>

  <fieldset>
    <legend>Advanced</legend>
    <%= form.input :template %>
  </fieldset>

  <%= form.hidden_field :parent_id%>
  <%= form.hidden_field :node_id%>
</div>

<div class='actions'>
  <%= form.button :submit, :disable_with => 'Please wait...', :class => 'btn primary' %>
  <%= link_to 'Back', [:qwerty_admin, :nodes], :class => 'btn' %>
</div>

